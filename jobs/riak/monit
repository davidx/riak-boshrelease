check process riak
  with pidfile "/var/vcap/sys/run/riak-dev/riak.pid"
  start program "/var/vcap/packages/common/bin/monit_debugger riak_ctl /var/vcap/jobs/riak-dev/bin/riak_ctl start"
  stop program  "/var/vcap/packages/common/bin/monit_debugger riak_ctl /var/vcap/jobs/riak-dev/bin/riak_ctl stop"
  group vcap
